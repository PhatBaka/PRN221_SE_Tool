@page
@model SETool_RazorPage.Pages.Students.Projects.IndexModel
@{
}
<div class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 col-lg-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        <div class="header-title">
                            <h4 class="card-title">Project</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (Model.GroupProjects == null 
                                || Model.GroupProjects.Count == 0)
                        {
                            <p>You don't have any project is registering</p>
                        }
                        else
                        {
                            <table class="table table-striped dataTable mt-4" role="grid"
                                   aria-describedby="user-list-page-info">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.GroupProjects[0].Project.Id)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.GroupProjects[0].Project.Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.GroupProjects[0].Status)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.GroupProjects[0].ApprovedDate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.GroupProjects[0].ApprovedBy)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.GroupProjects[0].RegisterDate)
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in @Model.GroupProjects)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Project.Id)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Project.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Status)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ApprovedDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ApprovedBy)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.RegisterDate)
                                            </td>
                                            <td>
                                                <div class="flex align-items-center list-user-action">
                                                    <div class="flex align-items-center list-user-action">
                                                        <a class="btn btn-sm bg-primary" data-toggle="tooltip" data-placement="top" title=""
                                                           data-original-title="Register" asp-page="./Create"> <i class="ri-user-add-line mr-0"></i></a>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        @if (Model.AvailableProjects == null
                                || Model.AvailableProjects.Count == 0)
                        {
                            <p>
                                Teacher don't have any project right now.
                            </p>
                        }
                        else
                        {
                            <table class="table table-striped dataTable mt-4" role="grid"
                                   aria-describedby="user-list-page-info">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.AvailableProjects[0].Id)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.AvailableProjects[0].Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.AvailableProjects[0].Description)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.AvailableProjects[0].Status)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.AvailableProjects[0].Semester)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.AvailableProjects[0].CoreTeacher)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.AvailableProjects[0].SideTeachers)
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in @Model.AvailableProjects)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Id)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Description)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Status)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Semester)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CoreTeacher)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SideTeachers)
                                            </td>
                                            <td>
                                                <div class="flex align-items-center list-user-action">
                                                    <a class="btn btn-sm bg-primary" data-toggle="tooltip" data-placement="top" title=""
                                                       data-original-title="Register" href="./Index?Method=Register&Id=@item.Id"><i class="ri-user-add-line mr-0"></i></a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
} 
